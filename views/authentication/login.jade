extends ../layout

block content
  h1 Authentication
  if (error)
    p= error
  p Please enter your authorisation information
  form(action='login', method='post')
    div
      label Username:
      input(type='text', name='username')
    div
      label Password:
      input(type='password', name='password')
    div
      input(type='submit', value='submit')

